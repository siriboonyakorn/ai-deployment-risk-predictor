# Copy this file to .env and fill in your values

# Database (Neon PostgreSQL or local)
DATABASE_URL=postgresql+psycopg://user:password@host/dbname?sslmode=require

# Redis
REDIS_URL=redis://redis:6379/0

# GitHub OAuth App credentials (create at https://github.com/settings/developers)
# Callback URL to set in your GitHub OAuth app: http://localhost:8000/api/v1/auth/github/callback
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# GitHub Personal Access Token (for fetching repo metadata)
GITHUB_TOKEN=your_github_personal_access_token

# Security â€” generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-long-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Frontend URL (used to redirect after OAuth callback)
FRONTEND_URL=http://localhost:3000

# Debug
DEBUG=false
